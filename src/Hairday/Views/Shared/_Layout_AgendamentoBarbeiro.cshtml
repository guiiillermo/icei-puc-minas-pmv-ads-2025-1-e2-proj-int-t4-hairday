    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Função para o filtro "Mostrar só horários agendados"
        document.getElementById('mostrarAgendados').addEventListener('change', function() {
            const slots = document.querySelectorAll('.slot-horario');

            if (this.checked) {
                slots.forEach(slot => {
                    if (!slot.classList.contains('ocupado')) {
                        slot.style.display = 'none';
                    }
                });
            } else {
                slots.forEach(slot => {
                    slot.style.display = 'block';
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>