<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hairday</title>
    <link rel="stylesheet" href="~/css/cabecalhoBarbeiro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styleServicos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hairday.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet" />

</head>
<body>
    <header class="header-black">
        <div class="img-logo">
            <img class="logo-img" src="~/img/logo.png">
        </div>
        <nav class="nav-links">
            <div class="nav-link">
                <a href="#">Homepage</a>
            </div>
            <div class="nav-link">
                <a href="#">Cabelo</a>
            </div>
            <div class="nav-link">
                <a href="#">Barba</a>
            </div>
            <div class="nav-link">
                <a href="#">SPA</a>
            </div>
            <div class="nav-link">
                <a href="#">Sobrancelha</a>
            </div>
            <div class="nav-link">
                <a href="#">Massagem</a>
            </div>
        </nav>
        <div class="login-link">
            <a href="#">Login</a>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>